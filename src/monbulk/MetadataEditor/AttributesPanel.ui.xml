<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.Button
		{
			width: 70px;
		}
	</ui:style>

	<g:LayoutPanel width="100%" height="100%">
		<g:layer top="0px" height="30px" left="0px" width="100px">
			<g:Label text="Attributes:" />
		</g:layer>
		<g:layer top="20px" left="0px" width="300px" height="50px">
			<g:ListBox visibleItemCount="4" ui:field="m_attributes" width="300px" height="100%" />
		</g:layer>

		<g:layer top="74px" height="24px" left="0px" width="300px">
			<g:HTMLPanel width="100%" height="100%" ui:field="m_buttonsPanel">
				<g:Button ui:field="m_add" styleName="{style.Button}" text="Add" />
				<g:Button ui:field="m_edit" styleName="{style.Button}" text="Edit" enabled="false" />
				<g:Button ui:field="m_remove" styleName="{style.Button}" text="Remove" enabled="false" />
			</g:HTMLPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 