<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:u="urn:import:monbulk.shared.widgets">

	<ui:style>
		.Button
		{
			width: 65px;
		}
	</ui:style>

	<g:LayoutPanel width="100%" height="60px">
		<!-- Reference name -->
		<g:layer top="2px" height="26px" left="0px" width="60px">
			<g:Label text="Name:" />
		</g:layer> 
		<g:layer top="0px" height="26px" left="130px" right="10px">
			<g:HTMLPanel>
				<div class="textBoxPadding">
					<g:TextBox width="100%" ui:field="m_referenceName" />
				</div>
			</g:HTMLPanel>
		</g:layer>

		<!-- Reference value -->
		<g:layer top="33px" height="26px" left="0px" width="120px">
			<g:Label text="Metadata name:" />
		</g:layer>
		<g:layer top="30px" height="26px" left="130px" width="265px">
			<g:HTMLPanel>
				<div class="textBoxPadding">
					<g:TextBox width="250px" ui:field="m_reference" readOnly="true" />
				</div>
			</g:HTMLPanel>
		</g:layer>
		<g:layer top="32px" height="24px" left="400px" width="70px">
			<g:HTMLPanel>
				<g:Button text="Select" ui:field="m_select" styleName="{style.Button}" />
			</g:HTMLPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder>