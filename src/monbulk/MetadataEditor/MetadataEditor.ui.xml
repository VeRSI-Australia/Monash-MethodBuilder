<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:w="urn:import:monbulk.shared.widgets">

	<ui:style>
		.ListBox
		{
		}
		
		.GreyTextBox
		{
			color: gray;
			font-style: italic;
		}
		
		.OuterContainer
		{
			margin: 5px;
		}
		
		.Button
		{
			width: 65px;
		}
	</ui:style>

	<g:DockLayoutPanel unit="EM" width="100%" height="100%" styleName="{style.OuterContainer}">
		<g:west size="17">
			<g:LayoutPanel width="100%" height="100%">
				<g:layer top="0px" height="30px" left="0px" right="0px">
					<g:HTMLPanel>
						<div class="textBoxPadding">
							<w:TextBoxEx width="100%" ui:field="m_filterTextBox" alignment="LEFT" visibleLength="30" hintText="(enter search text)" hintTextStyle="{style.GreyTextBox}" />
						</div>
					</g:HTMLPanel>
				</g:layer>
				<g:layer top="30px" bottom="40px">
					<g:ListBox visibleItemCount="15" width="100%" ui:field="m_metadataListBox" styleName="{style.ListBox}" height="100%" />
				</g:layer>
				<g:layer bottom="9px" height="24px" left="0px" right="0px">
					<g:HorizontalPanel width="100%" height="100%">
						<g:Button height="" text="Refresh" styleName="{style.Button}" ui:field="m_refreshList"/>
						<g:Button height="" text="Remove" styleName="{style.Button}" ui:field="m_removeMetadata"/>
						<g:Button height="" text="New" styleName="{style.Button}" ui:field="m_newMetadata" />
					</g:HorizontalPanel>
				</g:layer>
			</g:LayoutPanel>
		</g:west>
		<g:center>
			<g:LayoutPanel width="100%" height="100%">
				<g:layer top="0px" height="121px" left="3px" right="3px">
					<g:CaptionPanel captionText="Metadata" width="" height="">
						<g:FlowPanel width="100%" height="100%" >
							<g:LayoutPanel width="100%" height="29px">
								<g:layer top="2px" height="29px" left="0px" width="48px">
									<g:Label text="Name:" height=""/>
								</g:layer>
								<g:layer left="104px" right="10px" top="0px" height="23px">
									<g:HTMLPanel>
										<div class="textBoxPadding">
											<g:TextBox ui:field="m_name" width="100%" />
										</div>
									</g:HTMLPanel>
								</g:layer>
							</g:LayoutPanel>
							<g:LayoutPanel height="29px" width="100%">
								<g:layer top="2px" height="29px" left="0px" width="50px">
									<g:Label height="" text="Label:"/>
								</g:layer>
								<g:layer left="104px" right="10px" top="0px" height="23px">
									<g:HTMLPanel>
										<div class="textBoxPadding">
											<g:TextBox ui:field="m_label" width="100%" />
										</div>
									</g:HTMLPanel>
								</g:layer>
							</g:LayoutPanel>
							<g:LayoutPanel height="29px" width="100%">
								<g:layer left="0px" width="98px" top="2px" height="29px">
									<g:Label height="" text="Description:"/>
								</g:layer>
								<g:layer top="0px" height="23px" left="104px" right="10px">
									<g:HTMLPanel>
										<div class="textBoxPadding">
											<g:TextBox ui:field="m_description" width="100%" />
										</div>
									</g:HTMLPanel>
								</g:layer>
							</g:LayoutPanel>
						</g:FlowPanel>
					</g:CaptionPanel>
				</g:layer>
				<g:layer top="126px" left="3px" right="3px" height="175px">
					<g:CaptionPanel captionText="Elements">
						<g:ScrollPanel width="100%" height="100%">
							<g:Tree width="100%" height="100%" animationEnabled="true" ui:field="m_elementsTree"/>
						</g:ScrollPanel>
					</g:CaptionPanel>
				</g:layer>
				<g:layer left="3px" right="3px" bottom="12px" top="307px">
					<g:CaptionPanel captionText="Element properties">
						<g:ScrollPanel width="100%" height="100%">
							<g:VerticalPanel width="100%" height="100%" ui:field="m_properties" verticalAlignment="ALIGN_TOP">
							</g:VerticalPanel>
						</g:ScrollPanel>
					</g:CaptionPanel>
				</g:layer>
			</g:LayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
