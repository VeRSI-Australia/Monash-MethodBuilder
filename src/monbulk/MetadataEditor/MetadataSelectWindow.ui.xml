<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:monbulk.MetadataEditor">

	<ui:style>		
		.MetadataList
		{
			margin-top: 16px;
			margin-bottom: 8px;
			border: 1px solid black;
			padding: 8px;
		}
		
		.Button
		{
			width: 70px;
			float: left;
		}
		
		.Buttons
		{
			float: right;
		}
	</ui:style>

	<g:VerticalPanel width="100%" height="100%">
		<g:HTMLPanel styleName="{style.MetadataList}">
			<m:MetadataList width="400px" height="400px" ui:field="m_metadataList" showNew="false" showRefresh="true" showRemove="false" />
		</g:HTMLPanel>
		<g:HTMLPanel styleName="{style.Buttons}">
			<g:Button ui:field="m_ok" styleName="{style.Button}" text="Ok" />
			<g:Button ui:field="m_cancel" styleName="{style.Button}" text="Cancel" />
		</g:HTMLPanel>
	</g:VerticalPanel>
</ui:UiBinder> 