<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:u="urn:import:monbulk.shared.widgets">

	<ui:style>
		.HintText
		{
			color: gray;
			font-style: italic;
		}
	</ui:style>

	<g:LayoutPanel width="100%" height="24px">
		<g:layer top="0px" height="24px" left="0px" width="130px">
			<g:Label text="Maximum length:" />
		</g:layer>
		<g:layer top="0px" height="22px" left="130px" width="60px">
			<g:HTMLPanel>
				<div class="textBoxPadding">
					<u:TextBoxEx width="100%" ui:field="m_maxLength" hintText="infinite" hintTextStyle="{style.HintText}" onlyNumbers="true" />
				</div>
			</g:HTMLPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 