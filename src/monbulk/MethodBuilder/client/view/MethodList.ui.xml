<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.important {
			font-weight: bold;
		}
		.menuMethodName
		{
			font-size:12px;
		}
		.menuStack
		{
			padding:0px;
			margin:0px;
	
		}
		.menuStack tr
		{
			

		}
		.menuStack td
		{
			font-size:12px;
			height:34px;
			background-color:#CCC;
			border-top:Solid 1px #999;
			
		}
		.MenuScrolling
		{
			border-bottom:Solid 2px #999;
		}
		
	</ui:style>
	<g:HTMLPanel>
		<g:VerticalPanel height="570px" width="212px" styleName="LeftMenuPanel" >
		<g:HorizontalPanel width="212px" styleName="searchPanel" ui:field="_searchPanel"/>
		<g:ScrollPanel height="510px" width="212px" styleName="{style.MenuScrolling}">
		<!-- Have to be a list of widgets -->
			<g:FlexTable height="510px" width="198px" addStyleNames="{style.menuStack}" ui:field="_MenuStack" />
			
		</g:ScrollPanel>
		<g:PushButton ui:field="_Newbutton" styleName="btnDefault-NewMethod" text="Create Method">Create Method</g:PushButton>
		</g:VerticalPanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 
